<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".redeem.DottysCashRedeemRewardsActivity"
    android:background="@color/colorPrimary">
    <RelativeLayout
        android:id="@+id/circle_layout_two"
        android:layout_width="555dp"
        android:layout_height="555dp"
        android:background="@drawable/shape_circular_two"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <RelativeLayout
        android:id="@+id/circle_layout_one"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="@drawable/shape_circular_one"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <RelativeLayout
        android:id="@+id/circle_layout_zero"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/shape_circular_zero"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintCircleRadius="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/congrats_textview"
        android:textSize="32sp"
        android:textColor="#FFF"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/proxima_nova_semibold"
        android:text="CONGRATS!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/you_earned_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/you_earned_label"
        android:textSize="22sp"
        android:layout_marginBottom="15dp"
        android:textColor="#FFF"
        android:fontFamily="@font/proxima_nova_semibold"
        android:text="You’ve just earned"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/redeem_rewards_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="35dp"
        android:fontFamily="@font/proxima_nova_semibold"
        android:text="See Dotty’s host to redeem your reward"
        android:textColor="#FFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/redeem_rewards_image" />

    <ImageView
          android:id="@+id/redeem_rewards_image"
        android:src="@mipmap/redeem_rewards_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.agik.AGIKSwipeButton.View.Swipe_Button_View
        android:scaleY="0.8"
        android:scaleX="0.9"
        android:id="@+id/start_swipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:sb_swipe_animate_text="true"
        app:sb_swipe_text="Host Swipe to Redeem"
        app:layout_constraintCircleAngle="15"  />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/enter_code_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/title_enter_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="@font/proxima_nova_semibold"
            android:text="ENTER HOST ID"
            android:textColor="#FFF"

            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/subtitle_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proxima_nova_regular"
            android:text="To complete Validation and Redemption."
            android:textColor="#FFF"

            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title_enter_code" />

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="35dp"
            android:layout_marginEnd="25dp"
            android:gravity="top"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subtitle_textview">

            <EditText
                android:id="@+id/firts_host_code_edittext"
                style="@style/EditTextEnterCodeStyle" />

            <EditText
                android:id="@+id/second_host_code_edittext"
                style="@style/EditTextEnterCodeStyle" />

            <EditText

                android:id="@+id/third_host_code_edittext"
                style="@style/EditTextEnterCodeStyle" />

            <EditText
                android:id="@+id/fourth_host_code_edittext"
                style="@style/EditTextEnterCodeStyle" />

            <EditText
                android:id="@+id/fifth_host_code_edittext"
                style="@style/EditTextEnterCodeStyle" />

            <EditText
                android:id="@+id/sixth_host_code_edittext"
                style="@style/EditTextEnterCodeStyle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout7"
            app:layout_constraintStart_toStartOf="@+id/linearLayout7"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_one"
                    style="@style/ButtonPadStyle"
                    android:text="1" />

                <Button
                    android:id="@+id/button_two"
                    style="@style/ButtonPadStyle"
                    android:text="2" />

                <Button
                    android:id="@+id/button_three"
                    style="@style/ButtonPadStyle"
                    android:text="3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_four"
                    style="@style/ButtonPadStyle"
                    android:text="4" />

                <Button
                    android:id="@+id/button_five"
                    style="@style/ButtonPadStyle"
                    android:text="5" />

                <Button
                    android:id="@+id/button_six"
                    style="@style/ButtonPadStyle"
                    android:text="6" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button_seven"
                    style="@style/ButtonPadStyle"
                    android:text="7" />

                <Button
                    android:id="@+id/button_eigth"
                    style="@style/ButtonPadStyle"
                    android:text="8" />

                <Button
                    android:id="@+id/button_nine"
                    style="@style/ButtonPadStyle"
                    android:text="9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#00000000"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="9"
                    android:textColor="#FFF"
                    android:textSize="28sp"
                    android:visibility="invisible" />

                <Button
                    android:id="@+id/button_zero"
                    style="@style/ButtonPadStyle"
                    android:text="0" />

                <Button
                    android:id="@+id/button_backspace"
                    style="@style/ButtonPadStyle"
                    android:text="@string/backspace_pad" />
            </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ProgressBar
        android:id="@+id/progress_loader"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>