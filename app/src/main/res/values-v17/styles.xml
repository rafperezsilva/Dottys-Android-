<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextViewProfileStyle">
        <item name="android:textColor">#5A9402</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/proxima_nova_light</item>
        <item name="android:background">#00000000</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textAlignment">center</item>
        <item name="android:titleTextStyle">@style/TextViewPrimaryStyle</item>
        <item name="android:gravity">center</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorSecundary</item>


        <item name="android:windowDisablePreview">false</item>
<!--        <item name="android:windowBackground">@null</item>-->
        <item name="android:windowIsTranslucent">false</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>