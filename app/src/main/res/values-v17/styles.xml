<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="TextViewRegisterStyle">
        <item name="android:textColor">#9B9B9B</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/proxima_nova_light</item>
        <item name="android:background">#00000000</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">textStart</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="DatePicker" parent="@android:style/Theme.Holo.Light">
        <item name="android:datePickerStyle">@android:style/Widget.DatePicker</item>
        <!--        <item name="android:layout_alignParentBottom">true</item>-->
        <!--        <item name="android:layout_marginRight">55dp</item>-->
        <!--        <item name="android:layout_width">wrap_content</item>-->
        <!--        <item name="android:layout_height">wrap_content</item>-->
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="TextViewProfileStyle">
        <item name="android:textColor">#9B9B9B</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fontFamily">@font/proxima_nova_light</item>
        <item name="android:background">#00000000</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textAlignment">center</item>
        <item name="android:titleTextStyle">@style/TextViewPrimaryStyle</item>
        <item name="android:gravity">center</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorSecundary</item>


        <item name="android:windowDisablePreview">false</item>
<!--        <item name="android:windowBackground">@null</item>-->
        <item name="android:windowIsTranslucent">false</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>