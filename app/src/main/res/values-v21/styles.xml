<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">

    </style>
    <style name="TextViewRegisterStyle">
        <item name="android:textColor">#9B9B9B</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/proxima_nova_light</item>
        <item name="android:background">#00000000</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">textStart</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextViewProfileStyle">
        <item name="android:textColor">#9B9B9B</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/proxima_nova_light</item>
        <item name="android:background">#00000000</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="SearchView">
        <item name="floatingSearch_backgroundColor">#FFF</item>
        <item name="floatingSearch_viewSearchInputTextColor">#FFF</item>
        <item name="floatingSearch_viewSuggestionItemTextColor">#FFF</item>
        <item name="floatingSearch_hintTextColor">#FFF</item>
        <item name="floatingSearch_dividerColor">#FFF</item>
        <item name="floatingSearch_clearBtnColor">#FFF</item>
        <item name="floatingSearch_leftActionColor">#FFF</item>
        <item name="floatingSearch_menuItemIconColor">#FFF</item>
        <item name="floatingSearch_suggestionRightIconColor">#FFF</item>
        <item name="floatingSearch_actionMenuOverflowColor">#FFF</item>
    </style>
</resources>

