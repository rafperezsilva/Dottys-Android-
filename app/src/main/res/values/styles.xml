<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textAlignment">center</item>
        <item name="android:titleTextStyle">@style/TextViewPrimaryStyle</item>
        <item name="android:gravity">center</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorSecundary</item>
    </style>

    <style name="TextViewPrimaryStyle">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">proxima_nova_regular</item>
    </style>

    <style name="ButtonPrimaryStyle">
        <item name="android:textColor">#FFF</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">proxima_nova_regular</item>
    </style>

    <style name="ImageIconStyle">
        <item name="android:tint">#2556585A</item>
        <item name="android:scaleY">0.7</item>
        <item name="android:scaleX">0.7</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditTextLoginStyle">
        <item name="android:textColor">#5A9402</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">#00000000</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="TextViewRegisterStyle">
        <item name="android:textColor">#9B9B9B</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/proxima_nova_light</item>
        <item name="android:background">#00000000</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar">

    </style>

    <style name="SearchView">
        <item name="floatingSearch_backgroundColor">#FFF</item>
        <item name="floatingSearch_viewSearchInputTextColor"></item>
        <item name="floatingSearch_viewSuggestionItemTextColor"></item>
        <item name="floatingSearch_hintTextColor"></item>
        <item name="floatingSearch_dividerColor"></item>
        <item name="floatingSearch_clearBtnColor"></item>
        <item name="floatingSearch_leftActionColor"></item>
        <item name="floatingSearch_menuItemIconColor"></item>
        <item name="floatingSearch_suggestionRightIconColor"></item>
        <item name="floatingSearch_actionMenuOverflowColor">#FFF</item>
    </style>
</resources>
