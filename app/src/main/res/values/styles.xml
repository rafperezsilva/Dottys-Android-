<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="android:titleTextStyle">@style/TextViewPrimaryStyle</item>
        <item name="android:gravity">center</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorSecundary</item>



    </style>


    <style name="WindowAnimations">
        <item name="android:activityOpenEnterAnimation">
            @anim/slide_in_left</item>
        <item name="android:activityOpenExitAnimation">
            @anim/slide_in_left</item>
        <item name="android:activityCloseEnterAnimation">
            @anim/slide_in_left</item>
        <item name="android:activityCloseExitAnimation">
            @anim/slide_in_left</item>
    </style>


